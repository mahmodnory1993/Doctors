<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="135dp" android:padding="20dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:layout_weight="1"
                android:background="@drawable/background_listview" android:padding="5dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom">
                <Button
                        android:text="تعديل"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp" android:id="@+id/doctor_edit_listview" android:layout_weight="1"
                        android:background="@drawable/backgroundbutton"/>
                <Button
                        android:text="التفاصيل"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp" android:id="@+id/doctor_info_listview" android:layout_weight="1"
                        android:background="@drawable/backgroundbutton"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="1" android:paddingRight="5dp">
                <TextView
                        android:text="اسم الطبيب"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/doctor_name_listview"
                        android:textSize="18sp"
                        android:textColor="#B647CA"/>
                <TextView
                        android:text="العنوان"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/doctor_addres_listview"
                        android:textSize="14sp"
                        android:textColor="#B164BE"/>
                <TextView
                        android:text="رقم الهاتف"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/doctor_phone_listview"
                        android:textSize="14sp"
                        android:textColor="#FFB164BE"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="75dp"

                    android:layout_height="75dp" app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/doctor_image_listview"
                    android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>