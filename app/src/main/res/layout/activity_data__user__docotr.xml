<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Data_of_User_and_Docotr"
        android:orientation="vertical" android:padding="20dp">


    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/typeuser" android:padding="30dp"/>
    <LinearLayout
            android:id="@+id/textdata"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:visibility="visible">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/name"
                android:enabled="false"
                android:hint="الاسم"
                android:visibility="visible"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:enabled="false"

                android:id="@+id/department_doctor" android:hint="الاختصاص" android:visibility="visible"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:enabled="false"

                android:id="@+id/addres_doctor" android:hint="العنوان" android:visibility="visible"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:enabled="false"

                android:id="@+id/phonenum_doctor" android:hint="رقم الحجز" android:visibility="visible"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:enabled="false"

                android:id="@+id/signup_doctor" android:hint="رقم الاجازة" android:visibility="visible"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:enabled="false"
                android:id="@+id/city" android:layout_weight="1" android:hint="المدينة"/>
        <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/mohafada" android:layout_weight="1"
                android:padding="30dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="10dp" android:visibility="visible"
            android:id="@+id/doctorsignuply">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:visibility="visible">
            <Button
                    android:text=" صورة عن الاجازة"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_signup_doctor_btn"
                    android:layout_weight="1"
                    android:visibility="visible"
                    android:enabled="false"
            />
            <ImageView
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_signup"
                    android:layout_weight="1"
                    android:visibility="visible"
                    android:enabled="false"
            />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:visibility="visible"
            android:id="@+id/doctorimagely">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">
            <Button
                    android:text="صورة الطبيب"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_doctor_btn"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:visibility="visible"/>
            <ImageView
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_doctor"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:visibility="visible"/>
        </LinearLayout>
    </LinearLayout>
    <Button
            android:text="تسجيل"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/savaDatabtn"
            android:enabled="false"
            android:visibility="visible"/>
</LinearLayout>